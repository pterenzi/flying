<%= form_for(@account) do |f| %>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :credit %>

  <% if @account.credit? %>
    <div class="field">
      <%= f.label :client_id %><br />
      <%= f.select :client_id , @clients%>
    </div>

    <div class="field">
      <%= f.label "Pacote" %><br />
      <%= f.select :package_id, @packages %>
    </div>
    
    <div class='field'>
      <%= f.label "Horas" %><br />
      <%= f.text_field :hours,  :disabled=>true  %>
    </div>

    <div class="field">
      <%= f.label :value %><br />
      <%= f.text_field :value,  :disabled=>true %>
    </div>
    
    <div class="field">
      <%= f.label :Data %><br />
      <%= text_field_tag :date, @date, :class=>'datepicker' %>
    </div>

  
  <% else %>
  
    <div class="field">
      <%= f.label :supplier_id %><br />
      <%= f.select :supplier_id , @suppliers%>
    </div>

    <div class="field">
      <%= f.label :payment_date %><br />
       <%= text_field_tag :date, @date, :class=>'datepicker' %>
    </div>

    <div class="field">
      <%= f.label :value %><br />
      <%= f.text_field :value %>
    </div>

  <% end %>
  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments, :rows=>3 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<hr>
