<script type='text/javascript'>
  $(function() {
    $("#account_package_id").change(function(){
      $.ajax({
        url: '/packages/' + $("#account_package_id").val() + '/busca_pacote',
        type: 'GET',
        data: { id: $("#account_package_id").val() },
        success: function(data){
          $("#account_value").val(data.price);
          $("#account_hours").val(data.quantity);
        }
      });
    });
  });
</script>
