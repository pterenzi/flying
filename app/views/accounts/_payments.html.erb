<h1>Pagamentos</h1>
<table>
	<tr>
		<th>Fornecedor:</th>
		<th>Data:</th>
	</tr>
	<tr>
		<td><%= select_tag :supplier_id, options_for_select(@suppliers, params[:supplier_id]), :prompt => 'Selecione' %></td>
		<td><%= render :partial => '/shared/date_range' %></td>
	</tr>
</table>
<hr>
<table width="90%">
  <tr>
    <th>Data</th>
    <th>Fornecedor</th>
    <th>Descritivo</th>	
    <th>Número do documento</th>
    <th>Código de barras</th>
    <th>Valor</th>
    <th>Desconto</th>
    <th>Juros</th>
    <th>Total</th>
    <th>Pago</th>
    <th>Observações</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% data.each do |account| %>
  <tr>
    <td><%= account.payment_date.to_s_br %></td>
    <td><%= account.supplier && account.supplier.name %></td>
    <td><%= account.description %></td>
    <td><%= account.value.real %></td>
    <td><%= account.payed? ? 'sim' : 'não' %></td>
    <td align="right" width="25px"><%= link_to image_tag("info.png", :size=>"20x20", :border=>0, :title=>"Detalhes"), account %></td>
    <td align="center" width="25px"><%= link_to image_tag("edit.png", :size=>"20x20", :border=>0, :title=>"Editar"), edit_account_path(account) %></td>
    <td align="left" width="25px"><%= link_to image_tag("trash.jpg",:size=>"20x20", :border=>0, :title=>"Excluir"), account, :confirm => 'Tem certeza que quer excluir o registro?', :method => :delete if current_user.master? %></td>
  </tr>
<% end %>

</table>

<br />
<hr>
