<h1>Listing payments</h1>

<table>
  <tr>
    <th>Client</th>
    <th>Type</th>
    <th>Company</th>
    <th>Due date</th>
    <th>Description</th>
    <th>Value</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% data.each do |account| %>
  <tr>
    <td><%= account.supplier && account.supplier.name %></td>
    <td><%= account.type %></td>
    <td><%= account.company_id %></td>
    <td><%= I18n.t account.due_date %></td>
    <td><%= account.description %></td>
    <td><%= account.value %></td>
    <td><%= account.status %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

