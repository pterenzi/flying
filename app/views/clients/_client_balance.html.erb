<table>
  <tr>
    <th>Date</th>
    <th>Credit</th>
    <th>Debit</th>
    <th>Balance</th>
  </tr>
<% @client.balances.each do |balance| %>
  <tr>
    <td><%= balance.date %></td>
    <% if balance.credit? %>
      <td><%= balance.hours %></td>
      <td>&nbsp;</td>
    <% else %>
      <td>&nbsp;</td>
      <td><%= balance.hours + balance.account.package.name %></td>
    <% end %>
  </tr>
  <br />
<% end %>
</table>