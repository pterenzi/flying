<% all = @client.sales + @client.entries %>
<table>
  <tr>
    <th>Date</th>
    <th>Description</th>
    <th>Credit</th>
    <th>Debit</th>
    <th>Balance</th>
  </tr>
<% total = 0 %>
<% all.each do |l| %>
  <tr>
    <td><%= l.date.to_s_br %></td>
    <td><%= l.description %></td>
    <% if l.is_a? Entry %>
      <td><%= l.value.real %></td>
      <td>&nbsp;</td>
      <% total += l.value %>
    <% else %>
      <td>&nbsp;</td>
      <td><%= l.value.real %></td>
      <% total -= l.value %>
    <% end %>
    <td><%= total.real %></td>
  </tr>
<% end %>
</table>