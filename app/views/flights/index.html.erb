<h1>Vôos</h1>

<table>
  <tr>
    <th>Prefixo</th>
    <th>Número</th>
    <th>Tipo</th>
    <th>Equipamento</th>
    <th>Cliente</th>
    <th>Instrutor</th>
    <th>Data</th>
    <th>Tempo de vôo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%= flight.prefix_id %></td>
    <td><%= link_to flight.number, flight %></td>
    <td><%= flight.type_id %></td>
    <td><%= flight.equipment %></td>
    <td><%= flight.client_id %></td>
    <td><%= flight.instructor_id %></td>
    <td><%= flight.flight_date %></td>
    <td><%= flight.flight_time %></td>
    <td align="right"><%= link_to image_tag("info.png", :size=>"16x16", :border=>0), flight %></td>
    <td align="center"><%= link_to image_tag("edit.png", :size=>"16x16", :border=>0), edit_flight_path(flight) %></td>
    <td align="left"><%= link_to image_tag("trash.jpg",:size=>"16x16", :border=>0), flight, :confirm => 'Are you sure?', :method => :delete %></td>

<% end %>
<hr>

</table>

