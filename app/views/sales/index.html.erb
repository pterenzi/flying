<style type='text/css'>
    .ui-autocomplete {
      max-height: 180px;
      overflow-y: auto;
    }
</style>
<script type="text/javascript">
  $(function() {
    
      function retrieve_client_id(name){
        $.ajax({
          url: '/clients/' + name + '/id_by_name',
          type: 'GET',
          success: function(id){
            $("#client_id").val(id);
            $("#name").val(name);
            $("#submit").focus();
          }
        });
      }
      
      $("#name").autocomplete({
        source: "clients/pesquisa_nomes",
        minLength: 2,
        maxRows: 7,
        select: function(event,ui){
          name = ui.item.value;
          retrieve_client_id(name);
          return false;
        },
        focus: function(e,ui){
          return false;
        },
      });

  });
</script>

