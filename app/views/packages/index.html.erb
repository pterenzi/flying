<h1>Pacotes</h1>

<table width="90%">
  <tr>
    <th>Tipo de aeronave</th>
    <th>Nome</th>
    <th align='right'>Preço</th>
    <th align='center'>Ativo?</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @packages.each do |package| %>
  <tr>
    <td><%= package.aircraft_type.name %></td>
    <td><%= link_to package.name, package %></td>
    <td align='right'><%= package.hour_price.real %></td>
    <td align='center'><%= package.active ? 'sim' : 'não' %></td>
    <td align="right" width="25px"><%= link_to image_tag("info.png", :size=>"20x20", :border=>0, :title=>"Detalhes"), package %></td>
    <td align="center" width="25px"><%= link_to image_tag("edit.png", :size=>"20x20", :border=>0, :title=>"Editar"), edit_package_path(package) %></td>
    <td align="left" width="25px"><%= link_to image_tag("trash.jpg",:size=>"20x20", :border=>0, :title=>"Excluir"), package, :confirm => 'Tem certeza que quer excluir o registro?', :method => :delete %></td>
  </tr>
<% end %>
<hr>

</table>

