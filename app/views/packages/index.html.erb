<h1>Pacotes</h1>

<table>
  <tr>
    <th>Aircraft type</th>
    <th>Name</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Hourly price</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @packages.each do |package| %>
  <tr>
    <td><%= package.aircraft_type.name %></td>
    <td><%= package.name %></td>
    <td><%= package.quantity %></td>
    <td><%= package.price %></td>
    <td><%= package.hourly_price %></td>
    <td><%= package.active %></td>
    <td><%= link_to 'Show', package %></td>
    <td><%= link_to 'Edit', edit_package_path(package) %></td>
    <td><%= link_to 'Destroy', package, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

