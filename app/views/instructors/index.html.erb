<style type='text/css'>
    .ui-autocomplete {
      max-height: 180px;
      overflow-y: auto;
    }
</style>
<script type="text/javascript">
  $(function() {
    
      function retrieve_instructor(name){
        window.location = "/instructors/"+ name + "/show_by_name/";
      }
      
      $("#name").autocomplete({
        source: "instructors/search_names",
        minLength: 2,
        maxRows: 7,
        select: function(event,ui){
          name = ui.item.value;
          retrieve_instructor(name);
          return false;
        },
        focus: function(e,ui){
          return false;
        },
      });

  });
</script>
